<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/email_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/bookman_old_style"
                android:text="@string/email"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/email_titulo"
                app:layout_constraintTop_toBottomOf="@+id/contactos_titulo" />

            <TextView
                android:id="@+id/email_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="44dp"
                android:fontFamily="@font/bookman_bold"
                android:text="Email:"
                android:textColor="#fff"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/email_icon"
                app:layout_constraintTop_toBottomOf="@+id/contactos_titulo" />

            <TextView
                android:id="@+id/contacto2_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bookman_old_style"
                android:text="@string/contacto2"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/telefone_titulo"
                app:layout_constraintTop_toBottomOf="@+id/contacto1_textp" />

            <ImageView
                android:id="@+id/contactos_titulo"
                android:layout_width="155dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/contacts_title" />

            <ImageView
                android:id="@+id/telefone_icon"
                android:layout_width="56dp"
                android:layout_height="51dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_icon"
                app:srcCompat="@drawable/contacts_phone" />

            <TextView
                android:id="@+id/telefone_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/bookman_bold"
                android:text="Telefone:"
                android:textColor="#fff"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/telefone_icon"
                app:layout_constraintTop_toBottomOf="@+id/email_titulo" />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="55dp"
                android:layout_height="44dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactos_titulo"
                app:srcCompat="@drawable/contacts_email" />

            <TextView
                android:id="@+id/contacto1_textp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bookman_old_style"
                android:text="@string/contacto1"
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/telefone_titulo"
                app:layout_constraintTop_toBottomOf="@+id/telefone_titulo" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>